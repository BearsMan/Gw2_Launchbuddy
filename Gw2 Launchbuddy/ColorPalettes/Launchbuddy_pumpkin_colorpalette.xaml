<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Gw2_Launchbuddy">


    <!-- DARK BACKGROUND -->
    <LinearGradientBrush x:Key="ButtonBackground" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Offset="0" Color="#363636"></GradientStop>
        <GradientStop Offset="1" Color="#525252"></GradientStop>
    </LinearGradientBrush>
    <SolidColorBrush x:Key="LightBackground" Color="#424242" />

    <SolidColorBrush x:Key="H1_Foreground" Color="#ff4400"/>
    <SolidColorBrush x:Key="H2_Foreground" Color="#fc632b"/>
    <SolidColorBrush x:Key="H3_Foreground" Color="#f77140"/>
    <SolidColorBrush x:Key="Text_Foreground" Color="#f77140"/>
    <SolidColorBrush x:Key="MainText_Foreground" Color="#f77140"/>
    <SolidColorBrush x:Key="Border_Background" Color="#db1600"/>
    <SolidColorBrush x:Key="Icon_Foreground" Color="#f77140"/>
    <SolidColorBrush x:Key="Item_Highlight" Color="#ed402d"/>

    <SolidColorBrush x:Key="B1_Background" Color="#1c1c1c"/>
    <SolidColorBrush x:Key="B2_Background" Color="#292828"/>
    <SolidColorBrush x:Key="B3_Background" Color="#404040"/>

    <SolidColorBrush x:Key="Enabled_False" Color="#e3e3e3"/>

</ResourceDictionary>